{
  "name": "@phoTool/server",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:smoke": "tsx src/db/smoke.ts"
  },
  "dependencies": {
    "@phoTool/shared": "file:../packages/shared",
    "better-sqlite3": "^11.6.0",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.10",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.24.0",
    "pino-pretty": "^11.2.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.1.4"
  }
}
