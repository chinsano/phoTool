{
  "name": "phoTool-root",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "server",
    "web"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings=0",
    "verify:ci": "npm run lint:ci && npm run depcruise && npm run type-check && npm --workspace @phoTool/server install --no-audit --no-fund && npm --workspace @phoTool/shared run build && cross-env CI=true npm --workspace @phoTool/server run db:migrate && npm run test:ci",
    "prepare": "husky",
    "depcruise": "depcruise --config .dependency-cruiser.cjs .",
    "type-check": "tsc -p tsconfig.base.json --noEmit",
    "server:dev": "npm --workspace @phoTool/server run dev",
    "server:build": "npm --workspace @phoTool/server run build",
    "server:start": "npm --workspace @phoTool/server run start",
    "server:test": "npm --workspace @phoTool/server run test",
    "test:ci": "npm --workspace @phoTool/server run test"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "cross-env": "^7.0.3",
    "dependency-cruiser": "^17.0.2",
    "eslint": "^9.37.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "eslint --max-warnings=0"
    ]
  }
}
